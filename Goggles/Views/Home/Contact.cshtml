@model Goggles.ViewModels.ContactViewModel
@{
    ViewBag.Title = "Contact";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .alert {
        display: none;
    }
</style>
<section class="banner-bottom-wthreelayouts py-lg-5 py-3">
    <div class="container">
        <h3 class="tittle-w3layouts text-center my-lg-4 my-4">Contact</h3>
        <div class="inner_sec">
            <p class="sub text-center mb-lg-5 mb-3">We love to discuss your idea</p>
            <div class="address row">

                <div class="col-lg-4 address-grid">
                    <div class="row address-info">
                        <div class="col-md-3 address-left text-center">
                            <i class="far fa-map"></i>
                        </div>
                        <div class="col-md-9 address-right text-left">
                            <h6>Address</h6>
                            <p>
                                Quinnox Inc, Bengaluru

                            </p>
                        </div>
                    </div>

                </div>
                <div class="col-lg-4 address-grid">
                    <div class="row address-info">
                        <div class="col-md-3 address-left text-center">
                            <i class="far fa-envelope"></i>
                        </div>
                        <div class="col-md-9 address-right text-left">
                            <h6>Email</h6>
                            <p>
                                Email :
                                <a href="mailto:sidharthap@quinnox.com"> sidharthap@quinnox.com </a>

                            </p>
                        </div>

                    </div>
                </div>
                <div class="col-lg-4 address-grid">
                    <div class="row address-info">
                        <div class="col-md-3 address-left text-center">
                            <i class="fas fa-mobile-alt"></i>
                        </div>
                        <div class="col-md-9 address-right text-left">
                            <h6>Phone</h6>
                            <p>+91 787 339 1346</p>

                        </div>

                    </div>
                </div>
            </div>
            <div class="contact_grid_right">
                @using (Html.BeginForm("Contact", "Home", FormMethod.Post))
                {                
                    <div class="row contact_left_grid">
                        <div class="col-md-6 con-left">
                            <div class="form-group">
                                <label class="my-2">Name</label>
                                <input class="form-control" type="text" name="Name" placeholder="" required="" autocomplete="off">
                            </div>
                            <div class="form-group">
                                <label>Email</label>
                                <input class="form-control" type="email" name="Email" placeholder="" required="" autocomplete="off">
                            </div>
                            <div class="form-group">
                                <label class="my-2">Subject</label>
                                <input class="form-control" type="text" name="Subject" placeholder="" required="" autocomplete="off">
                            </div>
                        </div>
                        <div class="col-md-6 con-right">
                            <div class="form-group" >
                                <label class="my-2">Message</label>
                                <textarea class="form-control" id="textarea" placeholder="" required="" style="width:500px;height:200px" ></textarea>
                            </div>
                        </div>
                        <input id="btnShow" class="btn btn-warning" type="submit" style="width:1070px;height:40px;margin-left:15px;" value="Send Feedback">
                        <div class="span4 pull-right">
                            <div class="alert alert-danger fade">
                                <button type="button" class="close" data-dismiss="alert">×</button>
                                <strong>Alert!</strong> Thank You for the feedback!!!
                            </div>
                        </div>
                    </div>
                
                }
            </div>
        </div>
    </div>
</section>
<script>
    $("#btnShow").on("click", function () {
        $(".alert").removeClass("in").show();
        $(".alert").delay(200).addClass("in").fadeOut(2000);
    });
</script>
